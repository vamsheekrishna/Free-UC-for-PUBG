<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com.example.myapplication.callerdialog.CallerActivity">
    <LinearLayout
        android:layout_margin="8dp"
        android:gravity="center|start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/user_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/avatar"/>
        <TextView
            android:layout_margin="8dp"
            android:textSize="24sp"
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vamshee Krishna"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageButton
            android:layout_margin="8dp"
            android:id="@+id/call"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="90dp"
            android:minHeight="90dp"
            android:src="@drawable/call"/>
        <ImageButton
            android:layout_margin="8dp"
            android:id="@+id/message"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/call"
            android:layout_toStartOf="@+id/free_uc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="90dp"
            android:minHeight="90dp"
            android:background="@color/white"
            android:src="@drawable/message"/>
        <ImageButton
            android:layout_margin="8dp"
            android:id="@+id/free_uc"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="90dp"
            android:minHeight="90dp"
            android:background="@color/white"
            android:src="@drawable/plogo"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/fl_adplaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />
</LinearLayout>
